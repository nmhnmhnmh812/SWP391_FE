<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <welcome-file-list>
        <!--set uu tien khi run project se vao trang home-->
        <welcome-file>home</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>update_userprofile</servlet-name>
        <servlet-class>controler.update_userprofile</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>userprofile</servlet-name>
        <servlet-class>controler.userprofile</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>register</servlet-name>
        <servlet-class>controler.register</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>verify</servlet-name>
        <servlet-class>controler.verify</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>home</servlet-name>
        <servlet-class>controler.home</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>controler.login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>logOut</servlet-name>
        <servlet-class>controler.logOut</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>mentorProfile</servlet-name>
        <servlet-class>controler.mentorProfile</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>update_userprofile</servlet-name>
        <url-pattern>/update_userprofile</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>userprofile</servlet-name>
        <url-pattern>/userprofile</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>verify</servlet-name>
        <url-pattern>/verify</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>home</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>logOut</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>mentorProfile</servlet-name>
        <url-pattern>/mentorprofile</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
